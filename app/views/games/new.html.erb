<h2>New game</h2>
<ul>
  <% @letters.each do |letter| %>
  <li class="box-letter"><%= letter %></li>
  <% end %>
</ul>

<div class="longest-word-form">

  <form action="/score" method="POST">
    <input type="text" name="attempt">
    <input class="btn-blue" type="submit" value="Play!">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
  </form>

</div>
